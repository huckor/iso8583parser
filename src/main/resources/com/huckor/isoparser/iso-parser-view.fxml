<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.huckor.isoparser.IsoParserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Spinner fx:id="startingPointLeft" editable="true" initialValue="0" prefHeight="26.0" prefWidth="72.0">
       <valueFactory>
           <SpinnerValueFactory.IntegerSpinnerValueFactory max="1000" min="0" />
       </valueFactory>
   </Spinner>
   <TextArea fx:id="textAreaIsoIn" prefHeight="100.0" prefWidth="200.0" promptText="Paste your ISO message here" style="-fx-text-fill: black;" wrapText="true">
       <font>
           <Font name="Monospaced Regular" size="13.0" />
       </font>
   </TextArea>
   <TextArea fx:id="textAreaIsoOut" editable="false" style="-fx-text-fill: black;" VBox.vgrow="ALWAYS">
      <font>
         <Font name="Monospaced Regular" size="13.0" />
      </font>
   </TextArea>
    <Button onAction="#onPasteButtonClick" text="parse" />
</VBox>
